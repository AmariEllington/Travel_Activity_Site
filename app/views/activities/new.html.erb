<div class="container">
  <br>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
    <h2 class="text-danger">There were some errors:</h2>
    <ul>
      <% @activity.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
  <br>
  <h1 class="text-success">Add a new activity: </h1>
  <%= form_for @activity do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
      <%= f.text_field :name, :class => "form-control text-dark", :placeholder => "Activity Name" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.text_field :price, :class => "form-control text-dark", :placeholder => "Price: Â£" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.text_field :street_name, :class => "form-control text-dark", :placeholder => "Street Address : 172, Fairfield way" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.text_field :city, :class => "form-control text-dark", :placeholder => "City" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.text_field :zip_code, :class => "form-control text-dark", :placeholder => "Zip Code" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.text_field :notes, :class => "form-control text-dark", :placeholder => "Description:" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.collection_select :country_id, Country.all, :id, :name, :class => "form-control text-dark"%>
      </div>
      <%=  f.submit class: "btn btn-info" %>
      <% end %>
    </div>
