<div class="container">
  <br>
  <% if @review.errors.any? %>
    <div id="error_explanation">
    <h2 class="text-danger">There were some errors:</h2>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
  <br>
  <h1 class="text-success">Add a new review: </h1>
    <div class="form-row">
      <%= form_for @review do |f| %>
      <div class="form-group col-md-6">
      <%= f.hidden_field :user_id, value: @user %>
      <%= f.text_field :title, :class => "form-control", :placeholder => "Review Title" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.text_field :rating, :class => "form-control", :placeholder => "Rating - 1 to 5" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.text_field :review, :class => "form-control", :placeholder => "Review" %>
      </div>
      <div class="form-group col-md-6">
      <%= f.collection_select :activity_id, Activity.all, :id, :name, :class => "form-control"%>
      </div>
      <%=  f.submit class: "btn btn-info" %>
      <% end %>
    </div>
