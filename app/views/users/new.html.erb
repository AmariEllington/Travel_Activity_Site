<body class=login_page>
<div class="login_container">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4 text-center">
        <div class="form-login"><br>
          <h4>Sign Up</h4>
          <br>
          <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.text_field :name, :class => "form-control input-sm chat-input", :placeholder => "Username"%>
          </div>
          <div class="form-group">
            <%= f.text_field :first_name, :class => "form-control input-sm chat-input", :placeholder => "First Name"%>
          </div>
          <div class="form-group">
            <%= f.text_field :last_name, :class => "form-control input-sm chat-input", :placeholder => "Last Name"%>
          </div>
          <div class="form-group">
            <%= f.password_field :password, :class => "form-control input-sm chat-input", :placeholder => "Password"%>
          </div>
          <div class="form-group">
            <%= submit_tag "Sign Up", class: "btn btn-info"  %>
          </div>
            <% end %>
          </div>
      </div>
    </div>
</div>
</body>
